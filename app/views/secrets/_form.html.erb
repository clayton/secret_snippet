    <% if flash[:error].present? %>
      <div class="alert alert-danger" role="alert">
        <%= flash[:error] %>
      </div>
    <% end %>
    <%= form_for @secret, html: {class: "mb-5 needs-validation #{@was_validated}"} do |f| %>
      <div class="form-group">
        <%= f.label :recipient_email, "Who can view this secret?" %>
        <%= f.text_field :recipient_email, class: "form-control form-control-lg #{@recipient_email_valid_class}", placeholder: random_funny_email_address, required: 'required' %>
        <small id="receipient_email_help" class="form-text text-muted">Enter the email address of the person who is allowed to view this secret.</small>
        <div class="invalid-feedback">
          Please specify a recipient email.
        </div>
      </div>
      <div class="form-group">
        <%= f.label :secret, "Password, secret text, private link etc." %>
        <%= f.text_area :secret, rows: "3", class: "form-control", placeholder: "enter your secret here" %>

        <small id="secret_text_help" class="form-text text-muted">Remember, keep it short and out-of-context.</small>
      </div>
      <div class="form-group">
        <%= f.label :expires_at, "Secret expires in" %>
        <%= f.select :expires_at, expires_at_options, {}, class: "form-control" %>
        <small id="expires_at_help" class="form-text text-muted">Secrets are deleted from the database shortly after expiring.</small>
      </div>
      <button type="submit" class="btn btn-lg btn-secondary">Get a shareable link</button>
    <% end %>
